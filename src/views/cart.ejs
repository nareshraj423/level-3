<!DOCTYPE html>
<html lang="en">

<head>
	<meta http-equiv="content-type" content="text/html; charset=UTF-8">
	<meta charset="utf-8">
	<title>Men's World</title>
	<meta name="generator" content="Bootply" />
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

	<!-- bower:css -->
	<link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
	<!-- endbower -->
	<!-- bower:js -->
	<script src="/lib/jquery/dist/jquery.js"></script>
	<script src="/lib/bootstrap/dist/js/bootstrap.js"></script>
	<!-- endbower -->
	<!-- inject:css -->
	<link rel="stylesheet" href="/css/styles.css">
	<!-- endinject -->
	<!-- inject:js -->
	<script src="/js/app.js"></script>
	<!-- endinject -->

	<!--[if lt IE 9]>
			<script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->
</head>

<body>
	<!--template-->
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="container" style="">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
             <span class="icon-bar"></span>
             <span class="icon-bar"></span>
             <span class="icon-bar"></span>
            </button>
				<a class="navbar-brand" href="/">Home</a>
			</div>
			<div class="collapse navbar-collapse" style="">
				<ul class="nav navbar-nav">
					<%for(var i=0;i<nav.length;i++){%>
						<li>
							<a href="<%=nav[i].Link%>">
								<%=nav[i].Text%>
							</a>
						</li>
						<%}%>
				</ul>


			</div>
			<!--/.nav-collapse -->
		</div>
	</div>
	<div class="container">
		<div class="col-md-12">
			<div class="center-block text-center">
				<h1>
					<%=title%>
				</h1>
				<p class="lead">Pick Your Style</p>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
			<%if(prod) {%>
				<ul class="list-group">
					<%for(var i=0;i<prod.length;i++){%>
						<li class="list-group-item">
							<span class="badge">Quantity: <%=prod[i].qty%></span>

							<span class="badge">Total Price: <%=prod[i].price%></span>

							<strong> <a href="/api/explore/<%=prod[i].item['_id']%>">Item: <%=prod[i].item['itemName']%></a>
								<br>
								Price: Rs<%=prod[i].item['price']%></strong>

							<div class="clearfix text-center">
								<a href="/view-cart/sub/<%=prod[i].item['_id']%>" class="btn btn-success pull-right" role="button">-</a>

								<a href="/view-cart/add/<%=prod[i].item['_id']%>" class="btn btn-success pull-right" role="button">+</a>

								<a href="/view-cart/del/<%=prod[i].item['_id']%>" class="btn btn-success pull-right" role="button">REMOVE</a>
							</div>
						</li>
						<%}%>
				</ul>
				<div class="row">
					<div class="col-sm-6 col-md-6 col-md-offset-4 col-sm-offset-4">
						<strong>Grand Total Quantity:
							<%=totalQ%></strong>
					</div>
				</div>
				<div class="row">
					<div class="col-sm-6 col-md-6 col-md-offset-4 col-sm-offset-4">
						<strong>Grand Total Price: <%=totalP%></strong>
					</div>
				</div>
				<%} else {%>
					<div class="row">
						<div class="col-sm-12 col-md-12 col-md-offset-4 col-sm-offset-4">
							<h2>No Items in the cart</h2>
						</div>
					</div>
					<%}%>
		</div>
	</div>
</body>

</html>
